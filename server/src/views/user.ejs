<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>List user</title>
</head>
<body>
  <div class="container">
    <div class="row">
<div class="user-infor-container">
    <form method="POST" action="/users/create-user">
  
        <div class="mb-3 mt-3"> 
          Create a new user :
        </div>
    <form>
        <div class="mb-3 mt-3 col-6">
          <label for="userId" class="form-label">userId address</label>
          <input type="userId" class="form-control" id="email" name="userId" required>
        
        </div>
        <div class="col-6"></div>
        <div class="mb-3 col-6">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <div class="col-6"></div>
        <div class="mb-3 col-6 pb-3">
          <label for="userName" class="form-label">UserName</label>
          <input type="text" class="form-control" id="userName" name="username" required>
        </div>
        <div class="mb-3 form-check col-3">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</form>
</div>
<div class="table-user">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">userId</th>
        <th scope="col">UserName</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <% userList.forEach(function(item, index) {%>
          <div>
            <tr>
              <th scope="row"><%=index+1 %></th>
              <td><%=item.userId %></td>
              <td><%=item.username %></td>
              <td>
                <a class="btn btn-warning" href="/update-user/<%=item.userId%>">
                    Edit
                </a>
                <form action="/delete-user/<%=item.userId%>" method="post" style="display:inline ;">
                  <button  class="btn btn-danger" type="submit">
                    Delete</button>
                </form>
              
              </td>
            </tr>
          </div>
      
          <% }) %>
      
    
    </tbody>
  </table>
</div>
</div>
  </div>
</body>
</html>